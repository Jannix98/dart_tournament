<UserControl x:Class="DartTournament.WPF.Controls.GameNavigationRail.GameNavigationRail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DartTournament.WPF.Controls.GameNavigationRail"
             mc:Ignorable="d" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:resx="clr-namespace:DartTournament.WPF.Resources"
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.DataContext>
        <local:GameNavigationRailVM/>
    </UserControl.DataContext>
    <UserControl.Resources>
        <Style x:Key="GameItem" TargetType="ListBoxItem" BasedOn="{StaticResource MaterialDesign3.NavigationDrawerPrimaryListBoxItem}">
            <Setter Property="Width" Value="225"/>
            <Setter Property="Height" Value="48"/>
        </Style>

        <Style x:Key="NavRailButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
            <Setter Property="Width" Value="234"/>
            <Setter Property="Height" Value="48"/>
            <Setter Property="Margin" Value="8"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="{DynamicResource MaterialDesign.Brush.Secondary}"/>
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesign.Brush.Secondary.Foreground}"/>
        </Style>
    </UserControl.Resources>
    <Grid Background="{DynamicResource MaterialDesign.Brush.ToolBar.Background}">
        <Grid.RowDefinitions>
            <RowDefinition Height="200" />
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Margin="0,8,0,0">
            <Button Style="{StaticResource NavRailButton}" Command="{Binding AddGameCommand}" materialDesign:ButtonAssist.CornerRadius="16">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <materialDesign:PackIcon Width="24"
                                       Height="24"
                                       VerticalAlignment="Center"
                                       Kind="PlusCircle" />
                    <TextBlock Margin="8,0,0,0"
                         VerticalAlignment="Center"
                         FontSize="18"
                         Text="Create New" />
                </StackPanel>
            </Button>

            <Button Style="{StaticResource NavRailButton}" Command="{Binding LoadGamesCommand}" materialDesign:ButtonAssist.CornerRadius="16">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <materialDesign:PackIcon Width="24"
                                       Height="24"
                                       VerticalAlignment="Center"
                                       Kind="Github" />
                    <TextBlock Margin="8,0,0,0"
                         VerticalAlignment="Center"
                         FontSize="18"
                         Text="Open Game" />
                </StackPanel>
            </Button>

            <Button Style="{StaticResource NavRailButton}" Command="{Binding PeopleCommand}" materialDesign:ButtonAssist.CornerRadius="16">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <materialDesign:PackIcon Width="24"
                                       Height="24"
                                       VerticalAlignment="Center"
                                       Kind="Account" />
                    <TextBlock Margin="8,0,0,0"
                         VerticalAlignment="Center"
                         FontSize="18"
                         Text="Players" />
                </StackPanel>
            </Button>
        </StackPanel>

        <ListBox x:Name="DemoItemsListBox" 
                   Grid.Row="1"
                   Margin="12,16,12,16"
                   AutomationProperties.Name="DemoPagesListBox"
                   ItemsSource="{Binding Items}"
                   SelectedIndex="{Binding SelectedIndex}"
                   SelectedItem="{Binding SelectedItem, UpdateSourceTrigger=PropertyChanged}">
            <ListBox.Resources>
                <Style TargetType="ScrollViewer" BasedOn="{StaticResource MaterialDesignScrollViewer}" />
                <Style TargetType="ScrollBar" BasedOn="{StaticResource MaterialDesignScrollBarMinimal}" />
                <DataTemplate DataType="{x:Type local:GameNavigationItem}">
                    <TextBlock Text="{Binding Text}" TextAlignment="Center" FontSize="14" TextTrimming="CharacterEllipsis" />
                </DataTemplate>
            </ListBox.Resources>
            <ListBox.ItemContainerStyle>
                <Style TargetType="ListBoxItem" BasedOn="{StaticResource GameItem}">
                    <Setter Property="materialDesign:NavigationDrawerAssist.SelectedIcon" Value="GamepadClassic" />
                    <Setter Property="materialDesign:NavigationDrawerAssist.UnselectedIcon" Value="GamepadClassicOutline" />
                    <Setter Property="materialDesign:NavigationDrawerAssist.CornerRadius" Value="16" />
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>

        <!-- Sidebar ListBox -->

        <!-- Content Display -->
        <Grid Grid.Column="1" Grid.RowSpan="3" Background="{DynamicResource MaterialDesignCardBackground}" Margin="2, 2, 0 , 0">
            <Grid.Effect>
                <DropShadowEffect ShadowDepth="1" Direction="180" Color="Black" Opacity="0.4" BlurRadius="4"/>
            </Grid.Effect>
            <!-- surface container low -->
            <!--<Label VerticalAlignment="Center" HorizontalAlignment="Center" Content="Please create or load a game!"/>-->

            <ContentControl Content="{Binding SelectedItem.Content}" />

        </Grid>

    </Grid>
</UserControl>
