<UserControl x:Class="DartTournament.WPF.Controls.GameTreeControl.MatchControl.MatchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DartTournament.WPF.Controls.GameTreeControl.MatchControl"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:converter="clr-namespace:DartTournament.WPF.ValueConverter"
             xmlns:resources="clr-namespace:DartTournament.WPF.Resources"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Height="100" Width="200">
    <UserControl.Resources>
        <converter:PlayerLoserForegroundConverter x:Key="PlayerLoserForegroundConverter"/>
        <converter:PlayerLoserTextDecorationConverter x:Key="PlayerLoserTextDecorationConverter"/>
        
        <Style TargetType="TextBlock" BasedOn="{StaticResource {x:Type TextBlock}}">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="HorizontalAlignment" Value="Left"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="4"/>
        </Style>
    </UserControl.Resources>
    <materialDesign:Card BorderThickness="1" UniformCornerRadius="8">
        <Grid>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="50"/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="{Binding Player1, RelativeSource={RelativeSource AncestorType=UserControl}}">
                    <TextBlock.Foreground>
                        <MultiBinding Converter="{StaticResource PlayerLoserForegroundConverter}">
                            <Binding Path="Player1Id" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                            <Binding Path="WinnerId" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                        </MultiBinding>
                    </TextBlock.Foreground>
                    <TextBlock.TextDecorations>
                        <MultiBinding Converter="{StaticResource PlayerLoserTextDecorationConverter}">
                            <Binding Path="Player1Id" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                            <Binding Path="WinnerId" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                        </MultiBinding>
                    </TextBlock.TextDecorations>
                </TextBlock>

                <Separator Grid.Row="1" Margin="0,4" Height="1" Background="Gray"/>

                <TextBlock Grid.Row="2" Text="{Binding Player2, RelativeSource={RelativeSource AncestorType=UserControl}}">
                    <TextBlock.Foreground>
                        <MultiBinding Converter="{StaticResource PlayerLoserForegroundConverter}">
                            <Binding Path="Player2Id" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                            <Binding Path="WinnerId" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                        </MultiBinding>
                    </TextBlock.Foreground>
                    <TextBlock.TextDecorations>
                        <MultiBinding Converter="{StaticResource PlayerLoserTextDecorationConverter}">
                            <Binding Path="Player2Id" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                            <Binding Path="WinnerId" RelativeSource="{RelativeSource AncestorType=UserControl}"/>
                        </MultiBinding>
                    </TextBlock.TextDecorations>
                </TextBlock>
            </Grid>
            <Grid Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
                <Button 
                    BorderThickness="0"
                    Command="{Binding ChooseWinnerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    CommandParameter="{Binding ChooseWinnerCommandParameter, RelativeSource={RelativeSource AncestorType=UserControl}}"
                    ToolTip="{x:Static resources:Labels.ChooseWinner}"
                    materialDesign:ButtonAssist.CornerRadius="8"
                    Width="38"
                    Height="38"
                    Background="{DynamicResource MaterialDesign.Brush.Primary}"
                    Padding="8">
                    <materialDesign:PackIcon Kind="Trophy" Foreground="{DynamicResource MaterialDesign.Brush.Primary.Foreground}" />
                </Button>
            </Grid>
        </Grid>
    </materialDesign:Card>
</UserControl>
