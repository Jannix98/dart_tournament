<UserControl x:Class="DartTournament.WPF.Controls.GameTreeControl.GameTreeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DartTournament.WPF.Controls.GameTreeControl"
             xmlns:mctrl="clr-namespace:DartTournament.WPF.Controls.GameTreeControl.MatchControl">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <ItemsControl ItemsSource="{Binding AllMatches}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <local:GameTreePanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate >
                    <ContentControl>
                        <mctrl:MatchControl Player1="{Binding Player1Name}" 
                                            Player2="{Binding Player2Name}" 
                                            Player1Id="{Binding IdGameEntityA}"
                                            Player2Id="{Binding IdGameEntityB}"
                                            WinnerId="{Binding WinnerId}"
                                            MatchRoundIndex="{Binding RoundIndex}"
                                            ChooseWinnerCommand="{Binding DataContext.SelectWinnerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                            ChooseWinnerCommandParameter="{Binding}"
                                            />                        
                    </ContentControl>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>