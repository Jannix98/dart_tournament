<UserControl x:Class="DartTournament.WPF.Controls.GameTreeControl.GameTreeControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:DartTournament.WPF.Controls.GameTreeControl"
             xmlns:mctrl="clr-namespace:DartTournament.WPF.Controls.GameTreeControl.MatchControl">
    <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
        <ItemsControl ItemsSource="{Binding AllMatches}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <local:GameTreePanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate >
                    <ContentControl>
                        <ContentControl.InputBindings>
                            <MouseBinding Gesture="LeftClick" 
                                          Command="{Binding DataContext.SelectWinnerCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" 
                                          CommandParameter="{Binding}" />
                        </ContentControl.InputBindings>
                        <mctrl:MatchControl Match="{Binding}"  />
                    </ContentControl>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </ScrollViewer>
</UserControl>