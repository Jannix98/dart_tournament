<UserControl x:Class="DartTournament.WPF.TeamTournamentControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DartTournament.WPF"
             xmlns:resources="clr-namespace:DartTournament.WPF.Resources"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Height="110" Width="300" Margin="0, 12, 0, 12">
        <Border BorderBrush="Black" BorderThickness="1">
            <StackPanel>
                <Label x:Name="teamName" FontSize="20" Height="50" />
                <Separator BorderBrush="Black" />
                <StackPanel Orientation="Horizontal">
                    <Label x:Name="teamScore"
                           FontSize="20"
                           Height="50" Width="250"/>
                    <Button x:Name="changeScore" Width="50"
                            Content="{x:Static resources:Labels.Edit}" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
