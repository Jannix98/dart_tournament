<UserControl x:Class="DartTournament.WPF.Controls.GameSession.GameSessionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DartTournament.WPF.Controls.GameSession"
             xmlns:converters="clr-namespace:DartTournament.WPF.ValueConverter"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid>
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <ContentPresenter x:Name="GameContent" Content="{Binding CurrentContent}"/>
        </ScrollViewer>

        <TabControl Width="250" VerticalAlignment="Top" HorizontalAlignment="Right"
                    Margin="0, 48, 48,0"
                    x:Name="TabControl" 
                    SelectedIndex="{Binding SelectedTabIndex}"
                    Visibility="{Binding ShowLooserRound, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TabItem x:Name="GameTab" Header="Game" Width="125">
                <!-- Tab content is now handled by the ContentPresenter below -->
            </TabItem>
            <TabItem x:Name="LooserRoundTab" Header="Looser Round" Width="125">
                <!-- Tab content is now handled by the ContentPresenter below -->
            </TabItem>
        </TabControl>
        

    </Grid>
</UserControl>
