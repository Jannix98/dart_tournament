<UserControl x:Class="DartTournament.WPF.Controls.GameSession.GameSessionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DartTournament.WPF.Controls.GameSession"
             xmlns:converters="clr-namespace:DartTournament.WPF.ValueConverter"
             xmlns:resources="clr-namespace:DartTournament.WPF.Resources"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </UserControl.Resources>
    <Grid Margin="8">
        <ScrollViewer HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <ContentPresenter x:Name="GameContent" Content="{Binding CurrentContent}"/>
        </ScrollViewer>

        <materialDesign:Card Margin="0, 48, 48,0" 
                             BorderThickness="1"
                             UniformCornerRadius="8"
                             Height="50"
                             Width="250" 
                             VerticalAlignment="Top" 
                             HorizontalAlignment="Right"
                             Visibility="{Binding ShowLooserRound, Converter={StaticResource BooleanToVisibilityConverter}}">
            <TabControl Width="250"
            x:Name="TabControl" 
            SelectedIndex="{Binding SelectedTabIndex}">
                <TabItem x:Name="GameTab" Header="{x:Static resources:Labels.MainGame}" Width="125">
                    <!-- Tab content is now handled by the ContentPresenter below -->
                </TabItem>
                <TabItem x:Name="LooserRoundTab" Header="{x:Static resources:Labels.LooserGame}" Width="125">
                    <!-- Tab content is now handled by the ContentPresenter below -->
                </TabItem>
            </TabControl>
        </materialDesign:Card>
    </Grid>
</UserControl>
