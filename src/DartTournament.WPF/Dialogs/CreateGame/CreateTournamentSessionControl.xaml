<UserControl x:Class="DartTournament.WPF.Dialogs.CreateGame.CreateTournamentSessionControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DartTournament.WPF.Dialogs.CreateGame"
             mc:Ignorable="d" 
             d:DesignHeight="800" d:DesignWidth="800"    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    Background="#F4F4FF"
    Padding="24">
    <UserControl.DataContext>
        <local:CreateTournamentSessionViewModel/>
    </UserControl.DataContext>
    <UserControl.Resources>
        <local:SelectedPlayersCountToStringConverter x:Key="SelectedPlayersCountToStringConverter"/>
        <local:TournamentPlayerCountToStringConverter x:Key="TournamentPlayerCountToStringConverter"/>
    </UserControl.Resources>

    <Grid ShowGridLines="True">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="8"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="16"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock
            Text="Create Tournament Session"
            FontWeight="Bold"
            FontSize="24"
            Margin="0,0,0,8"/>

        <!-- Enter Name -->
        <TextBlock Grid.Row="2" Text="Enter Name:" FontWeight="SemiBold" Margin="0,0,0,4"/>
        <TextBox
            Grid.Row="2"
            Margin="0,24,0,0"
            materialDesign:HintAssist.Hint="Tournament Name"
            Style="{StaticResource MaterialDesignOutlinedTextBox}"
            Text="{Binding TournamentName}"
            VerticalAlignment="Top"/>

        <!-- Advanced Mode -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" VerticalAlignment="Center">
            <TextBlock Text="Advanced Mode:" FontWeight="SemiBold" VerticalAlignment="Center"/>
            <ToggleButton Margin="12, 12, 0, 12"
  Style="{StaticResource MaterialDesignSwitchToggleButton}" IsChecked="{Binding AdvancedMode}"/>
        </StackPanel>

        <!-- Total Players -->
        <TextBlock Grid.Row="6" Text="Total Players:" FontWeight="SemiBold" Margin="0,0,0,4"/>

        <ComboBox
                Grid.Row="6"
                Margin="0,24,0,0"
                VerticalAlignment="Top"
                Style="{StaticResource MaterialDesignOutlinedComboBox}"
                ItemsSource="{Binding TotalPlayersOptions}"
                SelectedItem="{Binding SelectedTotalPlayers, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
            <ComboBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock
                        Text="{Binding Converter={StaticResource TournamentPlayerCountToStringConverter}}"/>
                </DataTemplate>
            </ComboBox.ItemTemplate>
        </ComboBox>

        <!-- Select Players -->
        <StackPanel Grid.Row="8" Margin="0,24,0,0">
            <TextBlock FontWeight="SemiBold" Margin="0,0,0,4">
                <TextBlock.Text>
                    <MultiBinding Converter = "{StaticResource SelectedPlayersCountToStringConverter}" >
                        <Binding Path = "SelectedPlayersCount" />
                        <Binding Path = "SelectedTotalPlayers" />
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
            <ListBox ItemsSource="{Binding Players}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <CheckBox IsChecked="{Binding IsSelected}" VerticalAlignment="Center"/>
                            <TextBlock Text="{Binding Name}" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>

        <!-- Create Session Button -->
        <Button
            materialDesign:ButtonAssist.CornerRadius="6"
            Grid.Row="10"
            Content="Create Session"
            Height="40"
            FontWeight="Bold"
            Style="{StaticResource MaterialDesignRaisedButton}"
            Margin="0,16,0,0"/>
    </Grid>
</UserControl>
