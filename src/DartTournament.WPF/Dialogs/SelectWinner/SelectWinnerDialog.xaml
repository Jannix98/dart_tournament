<dialogManagement:BaseDialog x:Class="DartTournament.WPF.Dialogs.SelectWinner.SelectWinnerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DartTournament.WPF.Dialogs.SelectWinner"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:dialogManagement="clr-namespace:DartTournament.WPF.Dialogs.Base"
        mc:Ignorable="d"
        Title="SelectWinnerDialog" Height="250" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Button x:Name="btn1" Click="btn1_Click"  Grid.Column="0" Margin="20"></Button>
        <Button x:Name="btn2" Click="btn2_Click" Grid.Column="1" Margin="20"></Button>

        <Button Grid.Column="1" Grid.Row="1" Content="Cancel" Margin="80, 0, 20, 20" Click="Button_Click"/> 
    </Grid>
</dialogManagement:BaseDialog>
