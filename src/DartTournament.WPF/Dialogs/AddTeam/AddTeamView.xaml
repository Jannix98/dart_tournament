<dialogManagement:BaseDialog x:Class="DartTournament.WPF.Dialogs.AddTeam.AddTeamView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DartTournament.WPF.Dialogs.AddTeam"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:dialogManagement="clr-namespace:DartTournament.WPF.Dialogs.DialogManagement"
        mc:Ignorable="d"
        Title="Neues Team"
        Width="300"
        Height="220"
        WindowStartupLocation="CenterOwner">
    <Window.Resources>
        <Style TargetType="TextBox"
               BasedOn="{StaticResource MaterialDesignOutlinedTextBox}">
            <Setter Property="Height"
                    Value="48" />
            <Setter Property="Margin"
                    Value="8" />
        </Style>
    </Window.Resources>
    <Window.DataContext>
        <local:AddTeamVM></local:AddTeamVM>
    </Window.DataContext>

    <StackPanel Margin="16, 16, 16, 0">
        <TextBlock Text="Teamname"
                   Style="{StaticResource MaterialDesignBody1TextBlock}"
                   Margin="0 0 0 8" />
        <TextBox Text="{Binding TeamName, UpdateSourceTrigger=PropertyChanged}"
                 materialDesign:TextFieldAssist.HasClearButton="True" />

        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0 16 0 0">
            <Button Content="Abbrechen"
                    Command="{Binding CancelCommand}"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Margin="0 0 8 0" />
            <Button Content="Bestätigen"
                    Command="{Binding ConfirmCommand}" />
        </StackPanel>
    </StackPanel>
</dialogManagement:BaseDialog>
